<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FailedActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <ScrollView
        android:layout_above="@id/bottom"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img"
                android:src="@drawable/ic_no_internet"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <TextView
                android:padding="20dp"
                android:text="Cannot connect to the server please try again"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/failed_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:onClick="failed_btn_clicked"
                android:text="Please Try Again"
                android:textColor="@android:color/black"
                android:background="@drawable/gray_bg_border"
                android:layout_marginTop="@dimen/failed_margin_top"
                android:layout_marginBottom="@dimen/show_image_margin_bottom"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="@dimen/bottom_padding">
        <ImageView
            android:id="@+id/bottom_contact"
            android:src="@drawable/ic_contact_70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/bottom_home"
            android:src="@drawable/ic_home_70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/bottom_help"
            android:src="@drawable/ic_help_70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/bottom_back"
            android:onClick="onBackClicked"
            android:src="@drawable/ic_back_70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>