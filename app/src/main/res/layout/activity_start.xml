<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StartActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_awba"
                android:src="@drawable/mag_logo"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/start_margin_top"/>
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_below="@id/img_awba"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/login_form"
                android:layout_below="@id/tv_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="25dp">
                <EditText
                    android:id="@+id/et_email"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/transparent_bg_border"/>
                <EditText
                    android:id="@+id/et_password"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/transparent_bg_border"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_sign_in"
                android:onClick="signin"
                android:layout_below="@id/login_form"
                android:text="Sign In"
                android:textColor="#000000"
                android:background="@drawable/gray_bg_border"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="40dp"/>
            <LinearLayout
                android:layout_below="@id/btn_sign_in"
                android:layout_marginTop="150dp"
                android:onClick="open_signup_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">
                <TextView
                    android:onClick="open_signup_activity"
                    android:text="You can Sign Up Here"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:gravity="center_vertical|end"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:onClick="open_signup_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <Button
                        android:onClick="open_signup_activity"
                        android:text="Sign Up"
                        android:textColor="#000000"
                        android:background="@drawable/gray_bg_border"
                        android:layout_width="100dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>