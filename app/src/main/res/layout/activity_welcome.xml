<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_welcome"
                android:text="Welcome"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/start_margin_top"/>
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_below="@id/tv_welcome"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_awba"
                android:layout_below="@id/tv_app_name"
                android:src="@drawable/mag_logo"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/start_margin_top"/>
            <Button
                android:onClick="continue_clicked"
                android:id="@+id/btn_continue"
                android:layout_below="@id/img_awba"
                android:text="continue"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gray_bg_border"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/start_margin_top"/>
            <LinearLayout
                android:layout_below="@id/btn_continue"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="3">
                <TextView
                    android:text="unicode"
                    android:textSize="@dimen/font_font_size"
                    android:textColor="#020D4A"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="zawgyi"
                    android:textSize="@dimen/font_font_size"
                    android:textColor="#020D4A"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="english"
                    android:textSize="@dimen/font_font_size"
                    android:textColor="#020D4A"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>